{{#if model.matured}}
<h4>Blocos maduros</h4>
<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Numero</th>
        <th>Bloco Hash</th>
        <th>Encontrado Em</th>
        <th>Variação</th>
        <th>Recompensa</th>
      </tr>
    </thead>
    <tbody>
      {{#each model.matured as |block|}}
        {{partial "blocks/block"}}
      {{/each}}
    </tbody>
  </table>
</div>
{{else}}
<h3>Ainda não acumulou blocos amadurecidos</h3>
{{/if}}
