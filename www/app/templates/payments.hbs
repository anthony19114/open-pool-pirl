<div class="jumbotron">
  <div class="container">
    <p class="lead">Pool sempre paga as taxas de tx.</p>
    <strong>Total de pagamentos enviados:</strong> <span class="label label-info">{{model.paymentsTotal}}</span>
  </div>
</div>
<div class="container">
  {{#if model.payments}}
  <h4>Últimos pagamentos</h4>
  <div class="table-responsive">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>Tempo</th>
          <th>Quantidade</th>
          <th>Endereço</th>
          <th>Tx ID</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.payments as |tx|}}
          <tr>
            <td>{{format-date-locale tx.timestamp}}</td>
            <td>{{format-number tx.formatAmount}}</td>
            <td>
              <a href="https://explorer.pirl.io/#/address/{{tx.address}}" class="hash" rel="nofollow" target="_blank">{{tx.address}}</a>
            </td>
            <td>
              <a href="https://explorer.pirl.io/#/transaction/{{tx.tx}}" class="hash" rel="nofollow" target="_blank">{{format-tx tx.tx}}</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <h3>Não há pagamentos</h3>
  {{/if}}
</div>
